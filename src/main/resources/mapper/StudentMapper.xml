<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
       
<mapper namespace="com.elearning.dao.StudentDao">
	<insert id="insertBasicInformation" parameterType="java.lang.String" useGeneratedKeys="true">
		insert into tb_student(studentID,password,studentName,studentImage,preferences) values(#{ID},'49ba59abb',#{name},null,null)
	</insert>
	
	<!--  update id="register" parameterType="String">
		update tb_student set password = ${password} where studentID = #{ID}
	</update -->
	
	<update id="register" parameterType="Student">
		update tb_student set password = #{password}, studentName = #{image}, preferences = #{preferences} where studentID = #{ID}
	</update>
	
	<update id="modifyPassword" parameterType="java.lang.String">
		update tb_student set password = #{password} where studentID = #{ID}
	</update>
	
	<update id="editInfomation" parameterType="java.lang.String">
		update tb_student set studentName = #{name},studentName = #{image},preferences = #{preferences}
		where studentID = #{ID}
	</update>
	
	<select id="getPassword" parameterType="java.lang.String">
		select password from tb_student where studentID = #{ID}
	</select>
	
	<delete id="delete" parameterType="java.lang.String">
		delete from tb_student where studentID = #{ID}
	</delete>
	
	<select id="findByID" parameterType="java.lang.String" resultType="Student">
		select * from tb_student where studentID = #{ID}
	</select>
	
	<resultMap type="Student" id="studentMap">
		<id column="ID" property="ID"/>
		<result column="studentID" property="studentID"/>
		<result column="studentName" property="name"/>
		<result column="password" property="password"/>
		<result column="studentName" property="image"/>
		<result column="preferences" property="preferences"/>
	</resultMap>
	
	<select id="findByName" parameterType="java.lang.String" resultMap="studentMap">
		select * from tb_student where studentName = #{name}
	</select>
	
	<select id="findAll" resultMap="studentMap">
		select * from tb_student
	</select>
</mapper>