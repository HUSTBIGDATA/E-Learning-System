<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hust.dao.AdminDao">
    <insert id="add" parameterType="Admin">
        insert into adminlog(adminName,adminPassword) VALUES (#{adminName},#{adminPassword})
    </insert>

    <update id="update" parameterType="Admin">
        UPDATE adminlog set adminPassword=${adminPassword} WHERE adminName=#{adminName}
    </update>

    <delete id="delete" parameterType="string">
        DELETE  FROM  adminlog WHERE adminName=#{adminName}
    </delete>

    <select id="findByID" parameterType="string" resultType="Admin">
        SELECT  *  FROM  adminlog WHERE adminName=#{adminName}
    </select>

    <resultMap id="AdminMap" type="Admin">
        <id column="adminName" property="adminName"></id>
        <result column="adminPassword" property="adminPassword"></result>
    </resultMap>
    <select id="findAll" resultMap="AdminMap">
        SELECT * FROM adminlog
    </select>
</mapper>